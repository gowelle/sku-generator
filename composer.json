{
    "name": "gowelle/sku-generator",
    "description": "Generate meaningful SKUs for Laravel e-commerce products and variants",
    "keywords": ["laravel", "sku", "e-commerce", "product", "variant"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "John Gowelle",
            "email": "gowelle.john@icloud.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0",
        "laravel/prompts": "^0.3.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "orchestra/testbench": "^8.0",
        "spatie/laravel-package-tools": "^1.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Gowelle\\SkuGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Gowelle\\SkuGenerator\\SkuGeneratorServiceProvider"
            ],
            "aliases": {
                "SkuGenerator": "Gowelle\\SkuGenerator\\Facades\\SkuGenerator"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
